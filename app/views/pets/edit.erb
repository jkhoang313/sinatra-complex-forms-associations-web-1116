<h1>Update Pet</h1>

<form action="/pets/<%=@pet.id%>" method="post">
  <label>Name:</label>
  <br></br>
  <input type="text" name="pet[name]" value="<%=@pet.name%>" id="pet_name">
  <br></br>

  <label>Choose an existing owner:</label>
  <br></br>
  <%Owner.all.each do |owner|%>
    <input type="checkbox" name="pet[owner_id]" value="<%=owner.id%>" id="<%=owner.id%>" <%="checked" if @pet.owner.id == owner.id%>><%=owner.name%>
  <%end%>
  <br></br>

  <label>or, create a new owner:</label>
  <br></br>
  <input type="text" name="owner[name]" id="owner_name">
  <br></br>

  <input type="submit" name="submit" value="Update Pet">
</form>
